<div class="main actor-show">
  <div class="container">
    <div class="actor">
      
      <!-- Display the movie's info here -->
      <div class="info">
        <%= image_tag @actor.image %>
        <h3 class="actor-first-name"><%= @actor.first_name %></h3>
        <p class="actor-last-name"><%= @actor.last_name %></p>
        <p class="actor-bio"><%= @actor.bio %></p>

          

            <h2>Movies</h2>
              <% @movies.each do |movie| %>
                  <div class="movie">
                  <%= image_tag movie.image %>
                  <h3 class="movie-title"><%= movie.title %> </h3>
                  <p class="movie-release_year"><%= movie.release_year %></p>
                  </div>
              <% end %>


      </div>
    </div>

    </div>
</div>